fn main() {
    let mut s1 = String::new();
    s1.push_str("Hello"); // adding text
    println!("String 1: {}", s1);
    let s2 = String::from("Rust Programming");
    println!("String 2: {}", s2);
    let s3 = "Learning Rust".to_string();
    println!("String 3: {}", s3);
    let s4 = s1 + " " + &s2;
    println!("Concatenated String: {}", s4);
}
